
block seo
	title.
		Testbench

block content
	.container-fluid.content-padding-top.content

		.page-header
			h1 Testbench
		.row
			.col-xs-12
				if openClients
					strong Clients
					ul
						for socket in openClients
							li= socket.data.currentUser.username
							
				if listeningFriendConnections
					strong listeningFriendConnections:
					ul
						for socket in listeningFriendConnections
							-var user = socket.data.friend.user() ? socket.data.friend.user().username : 'unknown'
							li= user + '->' + socket.data.friend.remoteEndPoint + ' ('+socket.id+')'

				if listeningFriendConnections
					strong watchFriendConnections:
					ul
						for socket in watchFriendConnections
							-var name = socket.data.currentUser ? socket.data.currentUser.username : 'unknown'
							li= name + '<-' + socket.data.friend.remoteEndPoint + ' ('+socket.id+')'
					
