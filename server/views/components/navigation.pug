nav.navbar.navbar-inverse.navbar-fixed-top
	.container-fluid
		.navbar-header
			button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			<a class="navbar-brand" href="/"><div class="header-logo"></div></a>
		#navbar.collapse.navbar-collapse(data-jsclass="navController")
			ul.nav.navbar-nav
				if globalSettings.communityChannel
					li#nav-community.hidden-logged-out
						a(href="/community" data-toggle="tooltip" title="Community posts." data-placement="bottom")
							<i class="fa fa-bullhorn fa-fw"></i>
							span.hidden-not-digitopia-xsmall
								| Community Feed
				li#nav-feed.hidden-logged-out
					a(href="/feed" data-toggle="tooltip" title="Friend's posts." data-placement="bottom")
						<i class="fa fa-users fa-fw"></i>
						span.hidden-not-digitopia-xsmall
							|  Friends Feed
				li#nav-profile.hidden-logged-out
					a(href="/profile" data-toggle="tooltip" title="Your Posts." data-placement="bottom")
						<i class="fa fa-user fa-fw"></i>
						span.hidden-not-digitopia-xsmall
							|  Your Posts
				li#nav-friends.hidden-logged-out
					a(href="/friends" data-toggle="tooltip" title="Your friends." data-placement="bottom")
						<i class="fa fa-user-plus fa-fw"></i>
						span.hidden-not-digitopia-xsmall
							|  Friends
				li#nav-settings.hidden-logged-out
					a(href="/settings" data-toggle="tooltip" title="Your Settings." data-placement="bottom")
						<i class="fa fa-cog fa-fw"></i>
						span.hidden-not-digitopia-xsmall
							|  Settings
				li#nav-bugs.hidden-logged-out
					a.bug-report(href="#" data-toggle="tooltip" title="Bug Report." data-placement="bottom")
						<i class="fa fa-bug fa-fw"></i>
						span.hidden-not-digitopia-xsmall
							|  Bug Report
							
			ul.nav.navbar-nav.navbar-right
				if globalSettings.multiUser === 'invite' && !inviteToken
					li.hidden-logged-in
						a(href="#" data-toggle="modal" data-target="#request-invite-form") Request Account
				if globalSettings.multiUser === 'open' || inviteToken
					li.hidden-logged-in
						a(href="#" data-toggle="modal" data-target="#register-form") Create Account
				li.hidden-logged-in
					a(href="#" data-toggle="modal" data-target="#login-form") Login
				li.hidden-logged-out
					a(href="" data-jsclass="logoutController") Logout
				li.menu-icon-placeholder.hidden-digitopia-xsmall
					#menu-icon(data-hijax="true")
						if user
							a(href='/profile')
								img.menubar-thumb(src= getUploadForProperty('photo', user.uploads(), 'thumb', headshotFPO).url)
