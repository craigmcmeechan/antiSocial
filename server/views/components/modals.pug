
aside#login-form.mdc-dialog(role="alertdialog")
	.mdc-dialog__surface
		form.form-validation(data-jsclass="loginController,formValidator" data-submitter="#login-button")
			header.mdc-dialog__header
				h2.mdc-dialog__header__title.
					Login
			section.mdc-dialog__body
				.mdc-layout-grid
					.mdc-layout-grid__inner
						.mdc-layout-grid__cell.mdc-layout-grid__cell--span-4-tablet.mdc-layout-grid__cell--span-6-desktop
							.form-group
								.mdc-text-field.mdc-text-field--with-trailing-icon
									input.login-email-address.mdc-text-field__input(type="email" name="email" data-validate="required,email" autocomplete="email")
									label.mdc-floating-label Email Address
									.input-ok-indicator.material-icons.mdc-text-field__icon
										span.fa.fa-check
									.mdc-line-ripple
								.validation-help.mdc-text-field-helper-text--persistent
						.mdc-layout-grid__cell.mdc-layout-grid__cell--span-4-tablet.mdc-layout-grid__cell--span-6-desktop
							.form-group
								.mdc-text-field.mdc-text-field--with-trailing-icon
									input.mdc-text-field__input(type="password" name="password" data-validate="required,password" autocomplete="current-password")
									label.mdc-floating-label Password
									.input-ok-indicator.material-icons.mdc-text-field__icon
										span.fa.fa-check
									.mdc-line-ripple
								.validation-help.mdc-text-field-helper-text--persistent
			footer.mdc-dialog__footer
				a.toggle-modal.mdc-button.mdc-dialog__footer__button--cancel(href="#" data-target="#password-request-reset-form") Forgot Password
				if globalSettings.multiUser === 'open'
					a.mdc-button.mdc-dialog__footer__button.mdc-dialog__footer__button--cancel(href="#" data-target="#register-form") Don't Have Account
				a.mdc-button.mdc-dialog__footer__button.mdc-dialog__footer__button--cancel(href="#") Cancel
				button#login-button.mdc-button.mdc-dialog__footer__button.mdc-button--raised(type="submit") Login
	.mdc-dialog__backdrop

aside#password-request-reset-form.mdc-dialog(role="alertdialog")
	.mdc-dialog__surface
		form.form.form-validation(action="/api/MyUsers/reset" method="POST" data-jsclass="postEndpointController,formValidator" data-submitter="#reset-request-button" data-modal="#password-request-reset-form" data-success-prompt="Please check your email.")
			header.mdc-dialog__header
				h2.mdc-dialog__header__title.
					Recover Password
			section.mdc-dialog__body
				.row
					.col-sm-6.form-group
						label Email Address
						.input-relative
							input.login-email-address.form-control(type="email" name="email" placeholder="Email address" data-validate="required,email" autocomplete="email")
							.input-ok-indicator
								span.fa.fa-check
							.validation-help
			footer.mdc-dialog__footer
				a.toggle-modal.mdc-button.mdc-dialog__footer__button.mdc-dialog__footer__button--cancel(href="#" data-target="#login-form") Login
				if globalSettings.multiUser === 'open'
					a.toggle-modal.mdc-button.mdc-dialog__footer__button.mdc-dialog__footer__button--cancel(href="#" data-target="#register-form" data-dismiss="modal") Don't Have Account
				a.mdc-button.mdc-dialog__footer__button.mdc-dialog__footer__button--cancel Cancel
				button#reset-request-button.mdc-button.mdc-dialog__footer__button.mdc-button--raised(type="submit") Password Reset
	.mdc-dialog__backdrop

if globalSettings.multiUser === 'open' || inviteToken
	aside#register-form.mdc-dialog(role="alertdialog")
		.mdc-dialog__surface
			form.form.form-validation(action="/api/MyUsers/register" method="POST" data-jsclass="formValidator,postEndpointController" data-submitter="#register-button" data-modal="#register-form")
				header.mdc-dialog__header
					h2.mdc-dialog__header__title.
						Register
				section.mdc-dialog__body
					.form-group.input-relative
						input.form-control(type="email" name="email" placeholder="Email address" data-validate="required,email" data-unique-endpoint= "/api/MyUsers/isunique?field=email" autocomplete="email")
						.input-ok-indicator
							span.fa.fa-check
						.validation-help

					.form-group.input-relative
						input.form-control(type="email" name="confirm-email" placeholder="Email address" data-validate="required,email" data-match="input[name='email']" autocomplete="email")
						.input-ok-indicator
							span.fa.fa-check
						.validation-help

					.form-group.input-relative
						input.form-control(type="password" name="password" placeholder="Password" data-validate="required,password" autocomplete="new-password")
						.input-ok-indicator
							span.fa.fa-check
						.validation-help

					.form-group.input-relative
						input.form-control(type="password" name="confirm-password" placeholder="Confirm Password" data-validate="required,password" data-match="input[name='password']"  autocomplete="off")
						.input-ok-indicator
							span.fa.fa-check
						.validation-help

					.form-group.input-relative
						input.form-control(type="text" name="name" placeholder="Name" data-validate="required" autocomplete="name")
						.input-ok-indicator
							span.fa.fa-check
						.validation-help

				footer.mdc-dialog__footer
					a.toggle-modal.mdc-button.mdc-dialog__footer__button.mdc-dialog__footer__button--cancel(href="#" data-target="#login-form") Already Have Account
					button#register-button.mdc-button.mdc-dialog__footer__button.mdc-button--raised Sign Up
		.mdc-dialog__backdrop
			
