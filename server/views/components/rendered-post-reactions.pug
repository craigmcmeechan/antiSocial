if !post
	- post = data.post
if !reactions
	- reactions = data.reactions
if !reactionSummary
	- reactionSummary = data.reactionSummary

.ajax-load.live-element(id= 'reactions-' + post.uuid data-watch= post.source + '/post/' + post.uuid data-watch-type="react")
	.post-reactions(data-jsclass="reactionController" data-endpoint= post.source + '/post/' + post.uuid)
		include reactions
