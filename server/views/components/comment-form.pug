- var photoId = photo ? photo.uuid : ''

#scope-posting-form
	.clearfix
	form.scope-posting-form.form.form-validation.mdc-elevation-transition(class= replyTo ? 'reply' : '' data-jsclass="postingFormController,formValidator" data-description= post ? post.description : '' data-about= about data-reply-to= replyTo data-endpoint= endpoint data-photo= photoId data-submitter='.post-submit-button' data-focus-target=".posting-body" data-single-upload= "1" data-modal= editing ? "#edit-comment-form" : '')
		.tabbed
			#form-tab
				.form-group.input-relative
					.posting-body.editable.markdown(data-jsclass="markdownEditorController" data-target=".posting-markdown"  data-in-modal= editing ? 'true' : '' style="font-family:Helvetica,Arial,sans-serif;")
						if comment
							!= marked(comment.details.body)
					textarea.posting-markdown(type="hidden" name="body" data-validate="required,noEscapedAngle" style="display:none;")
		.hide-until-subject-focus
			.upload-zone
		.form-group.input-relative.hide-until-subject-focus.comment-button-zone
			a#post-cancel-button.btn.btn-sm.btn-default(href="#") Cancel
			a#post-upload-button.btn.btn-sm.btn-default(href="#") <i class="fa fa-images"></i>
			.float-right
				button.post-submit-button.btn.btn-sm.btn-primary Post
