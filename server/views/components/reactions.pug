.reaction-summary
	table
		tr
			if !reactionSummary
				td.reaction-summary-icons
					.reaction-button-container.reaction-button.greyscale(data-value="thumbsup")
						.em.em-thumbsup
			if reactionSummary
				td.reaction-summary-icons
					!= reactionSummary.icons
				td.reaction-summary-heading.secondary
					!= reactionSummary.summary
			if timestamp
				td.reaction-summary-heading
					!= ' - ' + timestamp
				
.more-reactions
	if reactions
		for reaction in reactions
			if reaction.source === myEndpoint && reaction.details.reaction
				.reaction-button-container.reaction-button.reaction-summary-me(data-value="")
					.em.em-x

	.reaction-button-container.reaction-button(data-value="---1")
		.em.em---1
	.reaction-button-container.reaction-button(data-value="heart")
		.em.em-heart
	.reaction-button-container.reaction-button(data-value="smiley")
		.em.em-smiley
	.reaction-button-container.reaction-button(data-value="smirk")
		.em.em-smirk
	.reaction-button-container.reaction-button(data-value="open_mouth")
		.em.em-open_mouth
	.reaction-button-container.reaction-button(data-value="cry")
		.em.em-cry
	.reaction-button-container.reaction-button(data-value="rage")
		.em.em-rage
	.reaction-button-container.reaction-button(data-value="--1")
		.em.em--1
