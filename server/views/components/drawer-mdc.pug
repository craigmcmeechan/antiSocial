aside#nav-drawer.mdc-drawer.mdc-drawer--modal.mdc-typography
	nav.mdc-drawer__drawer
		header.mdc-drawer__header.hidden-logged-out
			.mdc-drawer__header-content.text-center
				#menu-icon(data-hijax="true")
					if user
						a(href=user ? '/' + user.username : "/profile")
							img.menubar-thumb(src= getUploadForProperty('photo', user.uploads(), 'thumb', headshotFPO).url)

		nav#icon-with-text-demo.mdc-drawer__content.mdc-list
			.hidden-logged-in
				if globalSettings.multiUser === 'invite' && !inviteToken
					a.nav-item.mdc-list-item.toggle-modal(href="#" data-target="#request-invite-form") Request Account
				if globalSettings.multiUser === 'open' || inviteToken
					a.nav-item.mdc-list-item.toggle-modal(href="#" data-target="#register-form") Create Account
				a.nav-item.mdc-list-item.toggle-modal(href="#" data-target="#login-form") Login

			.hidden-logged-out
				a#nav-feed.nav-item.mdc-list-item(href="/feed" data-toggle="tooltip" title="Friend's posts." data-placement="bottom")
					<i class="fa fa-users fa-fw material-icons mdc-list-item__graphic"></i>
					|  Friends Feed
				a#nav-communities.nav-item.mdc-list-item(href="/communities" data-toggle="tooltip" title="Communities." data-placement="bottom")
					<i class="fa fa-user fa-fw material-icons mdc-list-item__graphic"></i>
					|  Communities
				a#nav-profile.nav-item.mdc-list-item(href= user ? '/' + user.username : "/profile" data-toggle="tooltip" title="Your Posts." data-placement="bottom")
					<i class="fa fa-user fa-fw material-icons mdc-list-item__graphic"></i>
					|  Your Posts
				a#nav-friends.nav-item.mdc-list-item(href="/friends" data-toggle="tooltip" title="Your friends." data-placement="bottom")
					<i class="fa fa-user-plus fa-fw material-icons mdc-list-item__graphic"></i>
					|  Friends
				a#nav-settings.nav-item.mdc-list-item(href="/settings" data-toggle="tooltip" title="Your Settings." data-placement="bottom")
					<i class="fa fa-cog fa-fw material-icons mdc-list-item__graphic"></i>
					|  Settings
				a#nav-bugs.nav-item.mdc-list-item.bug-report(href="#" data-toggle="tooltip" title="Bug Report." data-placement="bottom")
					<i class="fa fa-bug fa-fw material-icons mdc-list-item__graphic"></i>
					|  Bug Report
				a.nav-item.mdc-list-item(href="" data-jsclass="logoutController") Logout
.mdc-drawer-scrim
