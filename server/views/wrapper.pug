doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
		link(rel="shortcut icon" href="/favicon.ico")
		meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimal-ui, viewport-fit=cover")
		meta(name="apple-mobile-web-app-capable" content="yes")
		meta(name="apple-mobile-web-app-status-bar-style" content="black")
		meta(name="apple-mobile-web-app-title" content="myAntiSocial.net")
		meta(name="format-detection" content="telephone=no")
		link(rel="apple-touch-icon" href="/images/logo.png")
		// link(rel="apple-touch-startup-image" href="/launch.png")

		link(href='//fonts.googleapis.com/css?family=Titillium+Web:100,300,400,600' rel='stylesheet' type='text/css')

		block seo

		if env === 'production'
			link(rel='stylesheet' href="/dist/css/DigitopiaSocial.min.css")
		else
			link(rel='stylesheet' href="/dist/css/DigitopiaSocial.css")

		link(rel='stylesheet' href="/dist/css/vis.min.css")

		block css
			
		style#override-styles(nonce= nonce type="text/css")

	body#document-body.offline(data-jsclass="liveElementsController,modalLaunchController,aspectRatioController,constrainedController,liveTimeController,tagController")
		script(nonce= nonce).
			var result;
			var cookie=(result=new RegExp('(?:^|; )responsive=([^;]*)').exec(document.cookie))?decodeURIComponent(result[1]):null;
			if(cookie){document.body.className = document.body.className + ' ' + cookie;}

		#splash(style="position:fixed;top:0;left:0;right:0;bottom:0;text-align:center;background-color:#333;z-index:99999;")
			#splash-logo
				img(src="/images/logo.svg" height="200px" style="margin:0 auto;")
				| myAntiSocial.net

		#news-feed.hidden-logged-out(data-jsclass="liveNewsFeedItemWebsocketController" data-endpoint = config.websockets )
			include components/news-feed

		include components/navigation
		.scroll-viewport
    
			include components/modals.pug
			
			#content(data-hijax="true")
				block content

			#tmks.container-fluid.text-center
				span.
					Copyright &copy; Michael Rhodes 2017 All Rights Reserved. (code for this this project is licensed under the MIT License)

			#ajax-status

		#fixed-footer.hidden-logged-out
			.footer-button.active.show-feed-button
				i.fa.fa-fw.fa-list-alt
			
			.footer-button.show-notifications-button
				i.fa.fa-fw.fa-bell
				.badge.activity-count

		block controller

		if env === 'production'
			script(src="/dist/js/jquery.min.js")
		else
			script(src="/dist/js/jquery.js")

		if environment.RAVEN_DSN_PUBLIC
			script(src="https://cdn.ravenjs.com/3.13.1/raven.min.js" crossorigin="anonymous")
			script(nonce= nonce).
				Raven.config('#{environment.RAVEN_DSN_PUBLIC}').install();
				function handleRouteError(err) {
					Raven.captureException(err);
					Raven.showReportDialog();
				}

		script(src="/socket.io/socket.io.js")
		script(src="https://checkout.stripe.com/checkout.js" async defer)

		if env === 'production'
			script(src="/dist/js/DigitopiaSocial.min.js")
		else
			script(src="/dist/js/DigitopiaSocial.js")

		script(src="/dist/js/vis.min.js" async defer)
				
		if environment.GOOGLE_MAPS_API_KEY
			script(src!= 'https://maps.googleapis.com/maps/api/js?key='+environment.GOOGLE_MAPS_API_KEY+'&libraries=geometry,places' async defer)

		script(nonce= nonce).
			$(document).ready(function() { bootMyAntiSocial(); });

			
