@import 'nib'

.thumb-grid
	.grid-row
		display: flex
		flex-wrap: wrap
		padding: 0 4px

	.grid-column
		flex: 25%
		max-width: 25%
		padding: 0 4px

	.grid-column img
		margin-top: 8px
		vertical-align: middle

@media screen and (max-width: 800px)
	.grid-column
		flex: 50%
		max-width: 50%

@media screen and (max-width: 600px)
	.grid-column
		flex: 100%
		max-width: 100%
